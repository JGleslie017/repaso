<Window x:Class="NombreProyecto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de Sesión" Height="250" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF80EBFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Inicio de Sesión" FontSize="20" Margin="0 0 0 20"/>
            <TextBlock Text="Nombre de Usuario"/>
            <TextBox x:Name="txtUsername" Margin="0 0 0 10"/>
            <TextBlock Text="Contraseña"/>
            <PasswordBox x:Name="txtPassword" Margin="0 0 0 10"/>
            <Button Content="Iniciar Sesión" Click="btnLogin_Click" Width="100"/>
            <TextBlock x:Name="lblError" Foreground="Red" Margin="0 10 0 0" Visibility="Collapsed"/>
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="112" VerticalAlignment="Top" Width="100" Source="/candado.png" Margin="10,58,0,0"/>
    </Grid>
</Window>
